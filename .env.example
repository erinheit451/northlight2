# ===========================================================================
# UNIFIED NORTHLIGHT PLATFORM CONFIGURATION TEMPLATE
# Copy this file to .env and update with your actual values
# ===========================================================================

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://app_user:app_secure_2024@localhost:5432/unified_northlight
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Legacy Database URLs (for migration reference)
LEGACY_HEARTBEAT_DUCKDB=../heartbeat/data/warehouse/heartbeat.duckdb
LEGACY_NORTHLIGHT_DUCKDB=../heartbeat/data/warehouse/northlight.duckdb

# Corporate Portal Authentication
CORP_PORTAL_USERNAME=your.email@company.com
CORP_PORTAL_PASSWORD=your_password
CORP_PORTAL_URL=https://corp.reachlocal.com/common/logon.php

# Corportal Report Configuration
CORPORTAL_LOGIN_URL=https://corp.reachlocal.com/common/logon.php
CORPORTAL_REPORT_URL=https://corp.reachlocal.com/reports/run.php?[your_report_params]

# Salesforce Configuration
SF_USERNAME=your.email@company.com
SF_PASSWORD=your_password
# SF_TOTP_CODE will be prompted for interactively on first daily run

# Ultimate DMS Configuration
ULTIMATE_DMS_BASE_URL=https://ultimate-dms-url.com

# Data Storage Paths
RAW_DATA_PATH=data/raw
WAREHOUSE_PATH=data/warehouse
DATA_ROOT=data
BOOK_DIR=data/book
EXPORT_DIR=data/exports

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/unified.log
ETL_LOG_FILE=logs/etl.log
API_LOG_FILE=logs/api.log

# Application Configuration
ENVIRONMENT=development
SECRET_KEY=unified-northlight-secret-key-2024-change-in-production
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security Configuration
CORS_ORIGINS=https://northlight.pages.dev,https://develop.northlight.pages.dev,http://localhost,http://localhost:8000,http://127.0.0.1:5500,http://127.0.0.1:8000,http://127.0.0.1:9000
MAX_REQUEST_SIZE=50MB

# Timezone and Localization
TIMEZONE=America/Los_Angeles
DEFAULT_LOCALE=en_US

# Monitoring and Alerting
SLACK_WEBHOOK_URL=
EMAIL_ALERTS_ENABLED=false
HEALTH_CHECK_INTERVAL=300

# ETL Configuration
ETL_SCHEDULE_ENABLED=true
ETL_RETRY_ATTEMPTS=3
ETL_TIMEOUT_SECONDS=3600
ETL_PARALLEL_JOBS=4

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_EXPORT_POWERPOINT=true
FEATURE_AUTOMATED_REPORTS=true