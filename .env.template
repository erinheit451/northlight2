# Unified Northlight Environment Configuration
# Copy this file to .env and fill in your actual credentials

# Corporate Portal Credentials
CORP_PORTAL_USERNAME=your_corp_portal_username
CORP_PORTAL_PASSWORD=your_corp_portal_password

# Salesforce Credentials
SF_USERNAME=your_salesforce_username
SF_PASSWORD=your_salesforce_password

# Optional: Slack notifications (leave blank to disable)
SLACK_WEBHOOK_URL=

# Optional: Download directory override
DOWNLOAD_DIR=data/raw

# Optional: Browser settings
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=120000